@model IEnumerable<OrderManagementApi.DTOs.ProductDto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="table-primary">
            <tr>
                <th class="d-none">Id</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade em Estoque</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="productsTable">
            @foreach (var product in Model)
            {
                <tr>
                    <td class="d-none">@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <div class="btn-group-wrapper d-flex flex-nowrap gap-2 justify-content-end">
                            <button class="btn btn-sm btn-secondary btn-update">Alterar</button>
                            <button class="btn btn-sm btn-danger btn-delete"
                                    data-id="@product.Id"
                                    data-name="@product.Name">
                                Deletar
                            </button>
                        </div>
                    </td>



                </tr>
            }
        </tbody>
    </table>
</div>
