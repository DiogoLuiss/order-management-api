@model OrderManagementApi.DTOs.ClientSimpleListResponseDto

<div class="table-responsive">
	<table class="table table-hover table-bordered table-responsive">
		<thead class="table-primary">
			<tr>
				<th>Nome</th>
				<th>Email</th>
				<th>Telefone</th>
				<th>Ação</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Clients != null && Model.Clients.Any())
			{
				@foreach (var client in Model.Clients)
				{
					<tr>
						<td>@client.Name</td>
						<td>@client.Email</td>
						<td>@client.Phone</td>
						<td class="text-center">
							<button class="btn btn-sm btn-primary select-customer"
									data-id="@client.Id"
									data-name="@client.Name"
									data-email="@client.Email"
									data-phone="@client.Phone">
								Selecionar
							</button>
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="6" class="text-center text-muted">
						Nenhum registro encontrado.
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div id="paginationInfo" data-current-page="@Model.CurrentPage" data-total-pages="@Model.TotalPages"></div>
</div>
