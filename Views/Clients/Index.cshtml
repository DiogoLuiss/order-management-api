@model IEnumerable<OrderManagementApi.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h2>Clients</h2>

@* <a href="#" class="btn btn-primary mb-3">Add Client</a> <!-- futuramente pode ser link para Create -->
 *@
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Client client in Model)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.Name</td>
                <td>@client.Email</td>
                <td>@client.Phone</td>
                <td>@client.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
